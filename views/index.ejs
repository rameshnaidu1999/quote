<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    
    <title>Make My Quote</title>
  </head>
  <body>
    <div class="container-fluid ">
        <div class="row">
            <div class="col-lg-5 col-xl-5 col-md-10 mx-auto my-3">
                <div class="card border-primary">
                        <div class="card-body">  
                                <h5 class="text-center text-success my-3">Welcome to Quote's App</h5>
                              
                                <form action="/quotes" method="POST">
                                    <div class="form-group">
                                        <input class="form-control" type="text" placeholder="Name" name="name" />
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" type="text" placeholder="Quote" name="quote" />
                                    </div>
                                  <button type="submit" class="btn btn-success btn-block">ADD MY QUOTE</button>
                                </form>
                        </div>
                </div>
                <div class="my-3">
                        <% for(var i=0; i<quotes.length; i++) {%>
                          
                            <div class="alert alert-primary" role="alert">
                                <span class="text-capitalize font-weight-bold">  <%= quotes[i].name %> : </span>
                                <span> <%= quotes[i].quote %> </span>
                            </div>
                          
                        <% } %>
                </div>
            </div>
        </div>
    </div>

    
    
      <script src="main.js"></script>
    </body>
</html>